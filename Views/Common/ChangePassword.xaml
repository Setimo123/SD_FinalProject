<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="UM_Consultation_App_MAUI.Views.Common.ChangePassword"           
               Color="Transparent"
               CanBeDismissedByTappingOutsideOfPopup="False">

    <Frame CornerRadius="15" 
           BackgroundColor="{AppThemeBinding Light=White, Dark=#2c2c2c}"
           BorderColor="Transparent"
           Padding="20"
           HasShadow="True"
           WidthRequest="320">

        <VerticalStackLayout Spacing="15">

            <Label Text="Change Password"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            
            <Frame Padding="5,0,5,0" 
                HasShadow="False" 
                CornerRadius="8" 
                BorderColor="{AppThemeBinding Light=LightGray, Dark=Gray}"
                BackgroundColor="Transparent">
                <Entry x:Name="OldPasswordEntry"
                    Placeholder="Current Password"
                    IsPassword="True" />
            </Frame>

            <Frame Padding="5,0,5,0" 
                   HasShadow="False" 
                   CornerRadius="8" 
                   BorderColor="{AppThemeBinding Light=LightGray, Dark=Gray}"
                   BackgroundColor="Transparent">
                <Entry x:Name="NewPasswordEntry"
                       Placeholder="New Password"
                       IsPassword="True" />
            </Frame>

            <Frame Padding="5,0,5,0" 
                   HasShadow="False" 
                   CornerRadius="8" 
                   BorderColor="{AppThemeBinding Light=LightGray, Dark=Gray}"
                   BackgroundColor="Transparent">
                <Entry x:Name="ConfirmPasswordEntry"
                       Placeholder="Confirm New Password"
                       IsPassword="True" />
            </Frame>

   

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">

                <Button Grid.Column="0"
                        Text="Cancel"
                        BackgroundColor="{AppThemeBinding Light=#e6e6e6, Dark=#444444}"
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        CornerRadius="20"
                        HeightRequest="40"
                        Clicked="OnCancelClicked" />

                <Button Grid.Column="1"
                        Text="Update"
                        BackgroundColor="#b61c1c"
                        TextColor="White"
                        CornerRadius="20"
                        FontAttributes="Bold"
                        HeightRequest="40"
                        Clicked="OnUpdateClicked" />
            </Grid>

        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>